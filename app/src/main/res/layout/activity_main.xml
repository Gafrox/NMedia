<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/posts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/postEditTitle"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        tools:listitem="@layout/card_post" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrierTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="inputText,saveButton" />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/post_text"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="@dimen/offset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/saveButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/barrierTop" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/description_post_like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputText"
        app:srcCompat="@drawable/ic_save_48" />

    <ImageButton
        android:id="@+id/cancelEditButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cancel_edit"
        app:layout_constraintBottom_toTopOf="@id/inputText"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_cancel_48" />

    <TextView
        android:id="@+id/postEditTitle"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:gravity="center|start"
        android:singleLine="true"
        android:text="@string/edit_text"
        android:textColor="#039BE5"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/postCancel"
        app:layout_constraintEnd_toStartOf="@id/cancelEditButton"
        app:layout_constraintStart_toEndOf="@id/editImage"
        tools:text="@string/edit_text" />

    <TextView
        android:id="@+id/postCancel"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:ellipsize="end"
        android:gravity="center|start"
        android:singleLine="true"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/inputText"
        app:layout_constraintEnd_toStartOf="@id/cancelEditButton"
        app:layout_constraintStart_toEndOf="@id/editImage"
        tools:text="@sample/posts.json/data/content" />

    <ImageView
        android:id="@+id/editImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/edit_image"
        app:layout_constraintBottom_toBottomOf="@+id/postCancel"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_edit_48" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="731dp"
        android:background="@color/white"
        android:visibility="gone"
        app:constraint_referenced_ids="postCancel, editImage, cancelEditButton, postEditTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>